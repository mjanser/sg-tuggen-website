        </property>
        <property name="email">
            <constraint name="NotBlank">
                <option name="message">Feld darf nicht leer sein.</option>
            </constraint>
            <constraint name="Email">
                <option name="message">Der Wert muss eine g√ºltige E-Mail-Adresse sein.</option>
            </constraint>
        </property>
        <property name="subject">
