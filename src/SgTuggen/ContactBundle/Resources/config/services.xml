<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sgtuggen_contact.email.subject" />
        <parameter key="sgtuggen_contact.email.recipients" type="collection" />
    </parameters>
    <services>
        <service id="sgtuggen.contact.form_handler" class="SgTuggen\ContactBundle\Handler\FormHandler">
            <call method="setFormFactory">
                <argument type="service" id="form.factory" />
            </call>
        </service>
        <service id="sgtuggen.contact.mail_handler" class="SgTuggen\ContactBundle\Handler\MailHandler">
            <call method="setMailer">
                <argument type="service" id="mailer" />
            </call>
            <call method="setSubjectTemplate">
                <argument>%sgtuggen_contact.email.subject%</argument>
            </call>
            <call method="setRecipients">
                <argument>%sgtuggen_contact.email.recipients%</argument>
            </call>
        </service>
    </services>

</container>
